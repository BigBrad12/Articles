<section class="row">
  <div class="form-container">


    <%= render 'share/error', obj: @article %>


    <%= form_with(model: @article, local: true) do |f| %>

        <div class="form-group">

          <%= f.label :title, class: "col-2 col-form-label" %> 
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow" %>
          </div>

        </div>

        <div class="form-group">

          <%= f.label :description, class: "col-2 col-form-label" %>
            <div class="col-16">
              <%= f.text_area :description, rows: 18, class: "form-control shadow" %> 
            </div>

        </div>

        <div class="form-group">

          <%= f.label :category, class: "col-2 col-form-label" %>
            <div class="col-10">
              <%= f.collection_select(:category_ids, Category.all, :id, :name, 
              { prompt: "Select Categories For Article"}, { multiple: true, size: 5, class: "form-select shadow" } ) %>
            </div>

        </div>

        <p class="submit-btn">
          <%= f.submit class: "btn btn-outline-success" %> 
        </p>
        
        <p class="submit-btn">
          <%= link_to "Return to articles listing", articles_path, class: "btn btn-outline-success mb-4" %>
        </p>


    <% end %>


  </div>
</section>