<section class="row">
  <div class="form-container">


    <%= render 'share/error', obj: @category %>


    <%= form_with(model: @category, local: true) do |f| %>

        <div class="form-group">

          <%= f.label :name, class: "col-2 col-form-label" %> 
          <div class="col-4">
            <%= f.text_field :name, class: "form-control shadow rounded" %>
          </div>

        </div>


        <p class="submit-btn col-4">
          <%= f.submit class: "btn btn-outline-success" %> 
        </p>
        
        <p class="submit-btn col-4">
          <%= link_to "Return to articles listing", articles_path, class: "btn btn-outline-success" %>
        </p>


    <% end %>


  </div>
</section>