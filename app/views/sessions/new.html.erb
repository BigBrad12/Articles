<h1 class="page-heading col-4">Login</h1>


<section class="row">
  <div class="form-container">

    <%= form_with(scope: :session, url: login_path, local: true) do |f| %>


        <div class="form-group">

          <%= f.label :email, class: "col-2 col-form-label" %>
            <div class="col-4">
              <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Email" %> 
            </div>

        </div>

        <div class="form-group">

          <%= f.label :password, class: "col-2 col-form-label" %>
            <div class="col-4">
              <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %> 
            </div>

        </div>

        <p class="submit-btn col-4">
          <%= f.submit "Login", class: "btn btn-outline-success" %> 
        </p>
        
        <p class="submit-btn col-4">
          <%= link_to "Return to articles listing", articles_path, class: "btn btn-outline-success" %>
        </p>


    <% end %>


  </div>
</section>